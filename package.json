  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/lodash": "^4.14.63",
    "@types/node": "^7.0.13",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "typescript": "^2.2.2"
  }
