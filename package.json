{
  "name": "hello-world-express-typescript",
  "version": "0.0.1",
  "description": "Minimal express.js app in typescript, deployable on heroku :rooster: :koala: :dragon:",
  "main": "index.js",
  "repository": "https://github.com/Offirmo/hello-world-express-typescript.git",
  "author": "Offirmo <offirmo.net@gmail.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": "7.x"
  },
  "scripts": {
    "clean": "rm -rf dist",

    "build:dev:watch": "tsc -p meta/dev --watch",
    "build:prod": "tsc -p meta/prod",

    "dev": "run-s clean build:dev:watch",
    "build": "run-s clean build:prod",

    "start": "node dist/src.es7.cjs/index.js",
    "start:dev": "nodemon --delay 1 --config meta/dev/nodemon.json dist/src.es7.cjs/index.js"
  },
  "dependencies": {
    "express": "^4.15.2",
    "lodash": "^4.17.4",
    "typescript-string-enums": "^0.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/lodash": "^4.14.63",
    "@types/node": "^8.9.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "pre-commit": "^1.2.2",
    "typescript": "^2.7"
  },
  "pre-commit": [
    "build"
  ]
}
